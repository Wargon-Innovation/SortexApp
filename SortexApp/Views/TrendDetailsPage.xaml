<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SortexApp.Views.TrendDetailsPage"
              xmlns:vm="clr-namespace:SortexApp.Models">
    
    <ContentPage.BindingContext>
        <vm:TrendImageView />
    </ContentPage.BindingContext>

    <ContentPage.Content Background="{StaticResource background}">
        <StackLayout>
            <Label Text="{Binding Id}"></Label>
            <ListView ItemsSource="{Binding TrendImages}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Image Source="{Binding FilePath}"></Image>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>